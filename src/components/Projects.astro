---
import JavaScript from "./icons/JavaScript.astro";

const TAGS = {
    JAVASCRIPT: {
        name: "JavaScript",
        class: "bg-[#f0db4f] text-[#323330]",
        icon: JavaScript,
    },
};

const PROJECTS = [
    {
        title: "Sistema De Ventas",
        description: "loewjs isu sjsdksddss",
        link: "#",
        github: "#",
        image: "/projects/sistema_ventas.webp",
        tags: [TAGS.JAVASCRIPT],
    },
];
---

{
    PROJECTS.map(({ title, description, tags, image }) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${title}`} />
        </article>
    ))
}
